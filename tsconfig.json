{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "checkJs": false,
    // ? Only for Next.js
    // "jsx": "preserve",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSourceMap": true,
    "incremental": true,
    "isolatedModules": true,
    "lib": ["ESNext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      // ! If changed, also update these aliases in babel.config.js,
      // ! webpack.config.js, next.config.ts, eslintrc.js, and jest.config.js
      "externals/*": ["external-scripts/*"],
      "multiverse/*": ["lib/*"],
      "package": ["package.json"],
      "pkgverse/*": ["packages/*"],
      "testverse/*": ["test/*"],
      "types/*": ["types/*"],
      "universe/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext"
  },
  "exclude": [
    "**/node_modules",
    "**/coverage",
    "**/dist",
    "**/bin",
    "**/build",
    "**/test/fixtures",
    "**/test/integration/assets"
  ],
  "include": [
    "types/**/*",
    "lib/**/*",
    "src/**/*",
    "test/**/*",
    "external-scripts/**/*",
    "packages/**/*"
  ]
}
